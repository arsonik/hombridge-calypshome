{
  "compilerOptions": {
    "target": "ES2018", // ~node10
    "module": "commonjs",
    "lib": [
      "esnext","dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "include": [
    "src/",
    "tests/"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
