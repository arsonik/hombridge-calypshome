{
  "extends": ["@ezweb/eslint-config/node"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-implicit-coercion": "error",
    "no-unused-expressions": ["error"]
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "no-var": "off",
        "prefer-destructuring": "off"
      }
    }
  ],
  "ignorePatterns": [
    "dist"
  ]
}
